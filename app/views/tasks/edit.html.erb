<div class='container'>
  <h1 class='mb-5'>Edit <%= @task.title %></h1>

  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details, class: 'form-control' %>
    </div>

    <div class="form-check">
      <%= f.check_box :completed, class: 'form-check-input' %>
      <%= f.label "Mark as complete", class: 'form-check-label' %>
    </div>

    <%= f.submit class: 'btn btn-primary mt-3' %>
  <% end %>

</div>

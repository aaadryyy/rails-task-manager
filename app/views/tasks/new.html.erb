<div class='container'>
  <h1 class='mb-5'>New task</h1>

  <form class="col-xs-12 col-md-6" action="/tasks" method = "POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <div class="form-group ">
      <label>Title</label>
      <input type="text" name="task[title]" class="form-control">
    </div>

    <div class="form-group">
      <label>Description</label>
      <input type="text" name="task[details]" class="form-control">
    </div>

    <input type="submit" class="btn btn-primary" value="Create a task">
    <br>
    <br>
    <i class="fas fa-undo text-primary"></i><%= link_to " Back to tasks", tasks_path %>


  </form>

</div>
